<% if !user_signed_in? %>
	<h3 style="display:inline">My Profile</h3>
<% else %>
	<h3 style="display:inline"><%= @user.name %>'s Profile</h3>
<% end %>
<br><br>
<ul class="nav nav-tabs">
	<li id = "profile" class="active"><%= link_to "Profile", user_path(@user.id) %></li>
	<li id = "followers"><%= link_to "Followers (#{@user.followers_count_by_type("user")})", user_followers_path(@user.id), :remote => true %></li>
	<li id = "following"><%= link_to "Following (#{@user.followees_count_by_type("user")})", user_following_path(@user.id), :remote => true %></li>
	<li id = "watched"><%= link_to "Rides Watched (#{@user.followees_count_by_type("event")})", user_my_watches_path(@user.id), :remote => true %></li>
	<li id = "joined"><%= link_to "Rides Joined (#{@user.joinees_count_by_type("event")})", user_my_joins_path(@user.id), :remote => true %> </li>
</ul>

<div id="content">
	<% if !@user.image.blank? %>
		<%= image_tag(@user.image) %><br>
	<% end %>
	<p><b>Name:</b> <%= @user.name %></p>
	<p><b>Email:</b> <%= @user.email if @user.email %> (private)</p>
	<p><b>Bio:</b> <%= @user.bio if @user.bio %></p>
	<%= link_to 'Edit', edit_user_registration_path %>
</div>
