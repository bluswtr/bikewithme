var div_id = $('#content');
var content = "<br><h4>Following</h4>";

<% if @user.followees_count_by_type("user") != 0 %>
	<% @user.followees_by_type("user").each do |following| %>
		content += "<%= escape_javascript link_to following.name, user_path(following.id) %>" + "<br>";
	<% end%>
<% end%>

["profile","followers","following","watched","joined"].forEach(
	function(divid){
		$('#' + divid).removeClass("active");
	});
$('#following').addClass("active");

div_id.html(content);