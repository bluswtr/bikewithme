<html lang="en" ng-app="inviteApp">
<body ng-controller="FriendListCtrl">
	<div class="container-fluid">
		<div class="row-fluid">
		    <div class="span2">
		      <!--Sidebar content-->
		      Search: <input ng-model="query">
		    </div>
		    <div class="span10">
			 	<ul>
			 	  <li ng-repeat="friend in friends | filter:query | orderBy:orderProp">
					<img ng-src = "{{friend.image}}"> {{friend.name}} {{friend.email}}
			      </li>
			    </ul>
			</div>
		</div>
	</div>
</body>
</html>