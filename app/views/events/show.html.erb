<script>
	$(document).ready(function(){
		var map = new Map(<%= @event[:meeting_point][1] %>,<%= @event[:meeting_point][0] %>,false);
		var polyline = <%= @event.bicycle_ride.polyline %>; 
		drawPolyline(polyline,map)
	});
</script>
	<%= render partial: "eventsearch/buttons_join_watch", locals: { title:@event.title, id:@event.id, user:@event.user, watched:@watched, joined:@joined} %>

<div id="map" class="map_half"></div><br>
<div>
	<ul class="list-group">
		<li class="list-group-item">
		<p><b>Joined:</b>
		<% if @event.user == current_user && @event.joiners_count_by_type("user") != 0 %>
			 <% @event.all_joiners.each do |joiner| %>
					<%= joiner.name %> 
			<% end %> 
		<% else %>
			No riders yet </p>
			</li>
		<% end %>

		<% pairs = [['When',@event.event_date.asctime],['Meeting Point',@event.address],['Description',@event.description],['Distance',@event.bicycle_ride.distance],['Pace',@descriptors["pace"][@event.bicycle_ride.pace][0]],['Terrain',@descriptors["terrain"][@event.bicycle_ride.terrain][0]],['Road Type',@descriptors["road_type"][@event.bicycle_ride.road_type][0]],['Total Elevation Gain',@event.bicycle_ride.total_elevation_gain],['Publishing Status',@event.publishing_status]] %>

		<% pairs.each do |title,value| %>
			<li class="list-group-item">
			<p><b><%= title %>:</b> <%= value %></p>
			</li>
		<% end %>

		<li class="list-group-item">
			<p><b>Privacy:</b> This Event is 
			<% if @event.is_private %>
				Private
			<% else %>
				Public
			<% end %></p>
		</li>
	</ul>
	<% if @event.user == current_user && @event.user == current_user %>
		<%= link_to raw('Edit <span class="glyphicon glyphicon-edit"></span>'),edit_event_path(@event.id), :class => "btn btn-primary btn-lg" %>
	<% end %>
</div>