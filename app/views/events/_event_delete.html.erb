<script>
	$('<%= '#delete-' + event.id %>').click(
		function (event){
			event.preventDefault();
			console.log("deleting...");
			alertify.confirm("Remove Ride <i><%= event.title %></i>?", 
				function (event) {
				    if (event) { // redirect to delete page
				        $.ajax({
				        	url: '<%= event_path(event.id) %>',
				        	type: 'DELETE'
				        }).done(function(){
				        		window.location = '<%= redirect %>';
				        	}
				        );
				    }
				}
			);
		}
	);
</script>