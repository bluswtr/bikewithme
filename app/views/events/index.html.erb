<ul class="nav nav-tabs">
<li class="active"><%= link_to "My Rides", events_path %></li>
</ul>
<br><br>

<table class='table table-hover'>
<% current_user.events.each do |event| %>
	<% if event.publishing_status == 'published' || event.publishing_status == 'draft' %>
		<tr><td>
			<h4 class='title-inline'><%= link_to event.title, event_path(event.id) %> 
			<% if !event.is_private %>
				<span class="glyphicon glyphicon-globe"></span></h4>
			<% else %>
				</h4>
			<% end %>
			<i><b><%= event.publishing_status %></b></i> Last Modified: <%= event.updated_at.strftime("%A %B %d %Y %H:%M%p") %>
		</td><td class='td_bar warning'>
			<%= link_to raw('<span class="glyphicon glyphicon-edit"></span>'),edit_event_path(event.id), :class => 'icon-lg' %>
		</td></tr>
	<% end %>
<% end %>
</table>