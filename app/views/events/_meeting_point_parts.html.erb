<%= event.label :meeting_point, 'Meeting Point *' %><br />
<div class="form-group" >
<div class="input-group" >
		<%= event.text_field :address, :class => 'form-control',:style => 'border-right:none', :id => 'event_address', "required" => "" %>
  <span id="clear_text" title="Clear Address" class="input-group-addon glyphicon glyphicon-remove" style="background-color:#fff;border-left:0px;cursor: pointer; cursor: hand;height:100%;"></span>
		<span id="search_for_address" title="Find Address" class="btn-primary input-group-addon glyphicon glyphicon-search" style="background-color:#428bca;color:#fff;cursor: pointer; cursor: hand;"></span>
	</div>
</div><br>

<script>
	$('#clear_text').click(function(event){
		$('#event_address').val('');
	});

	$('#search_for_address').click(function(event){
		var temp = $('#event_address').val();
		if(!isBlank(temp) && !isEmpty(temp))
			geocodeAddress(temp);
	});
</script>